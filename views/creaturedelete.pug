extends layout
block content
  h1= title
  if (toShow == null)
    h2 No instance to delete
  else
    - let creatureid = toShow._id
    - let creature = toShow.creature
    - let creaturelifespan = toShow.lifespan
    - let creaturehabitat = toShow.habitat
    - let actionid = "/resource/creature/" + creatureid
    script let actionid = "#{actionid}"
    div
      div.row
        div(class='creatureAttr mr-3') Creature ID is:
        div #{creatureid}
      div.row
        div(class='creatureAttr mr-3') Creature Type is:
        div #{creature}
      div.row
        div(class='creatureAttr mr-3') Creature Habitat is:
        div #{creaturehabitat}
      div.row
        div(class='creatureAttr mr-3') Creature Lifespan is:
        div #{creaturelifespan}
      button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
      button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
  script.
    function cancel() {
      // Go back to the home page for the creature collection
      window.location.href='/creature'
    }
  script.
    function deleteOnid() {
      console.log("starting delete")
      // delete first
      fetch(actionid, {
        method: 'DELETE' // Don't need a body for the delete
      }).then((resp) => {
        return resp.json(); // or resp.text() or whatever the server sends
      }).then((body) => {
        alert("Delete succeded")
        window.location.href='/creature'
        // TODO handle body
      }).catch((error) => {
        // TODO handle error
        alert("Delete failed " + error )
      });
    }